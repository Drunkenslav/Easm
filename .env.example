# Application Tier (A, B, or C)
APP_TIER=A

# Application
APP_NAME="EASM Platform"
APP_VERSION="0.1.0"
DEBUG=true
SECRET_KEY=your-secret-key-change-this-in-production

# Database
DATABASE_URL=sqlite:///./easm.db
# For Tier B/C use PostgreSQL:
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/easm

# Redis (for Celery - Tier B/C)
REDIS_URL=redis://localhost:6379/0

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# JWT Authentication
JWT_SECRET_KEY=your-jwt-secret-key-change-this
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Nuclei
NUCLEI_PATH=/usr/local/bin/nuclei
NUCLEI_TEMPLATES_PATH=./nuclei-templates
NUCLEI_RATE_LIMIT=150
NUCLEI_BULK_SIZE=25
NUCLEI_THREADS=25

# Scanning
MAX_CONCURRENT_SCANS=5
SCAN_TIMEOUT=3600

# Multi-tenancy (Tier C only)
MULTI_TENANT=false
DEFAULT_TENANT=default

# Email notifications (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=

# Logging
LOG_LEVEL=INFO
